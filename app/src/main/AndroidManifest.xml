<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kz.temirulan.photocopier" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PrinterActivity"
            android:label="@string/title_activity_printer"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="kz.temirulan.photocopier.MainActivity" />
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="kz.temirulan.photocopier.MainActivity" />
        </activity>
        <activity
            android:name=".NewScan"
            android:label="@string/title_activity_new_scan"
            android:parentActivityName=".PrinterActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="kz.temirulan.photocopier.PrinterActivity" />
        </activity>
        <activity
            android:name=".ScanHistory"
            android:label="@string/title_activity_scan_history"
            android:parentActivityName=".PrinterActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="kz.temirulan.photocopier.PrinterActivity" />
        </activity>
        <activity
            android:name=".PrintHistory"
            android:label="@string/title_activity_print_history"
            android:parentActivityName=".PrinterActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="kz.temirulan.photocopier.PrinterActivity" />
        </activity>
        <activity
            android:name=".NewPrint"
            android:label="@string/title_activity_new_print"
            android:parentActivityName=".PrinterActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="kz.temirulan.photocopier.PrinterActivity" />
        </activity>
    </application>

</manifest>
